<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.ewell.android.sleepcareforphone.activities.MyDevicesActivity">


        <RelativeLayout
            android:id="@+id/TitleView"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/themeblue">

            <TextView
                android:id="@+id/titleText"
                android:layout_width="170dp"
                android:layout_height="65dp"

                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/devices"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="16dp"
                android:layout_height="26dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_back"
                android:onClick="ClickClose" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:onClick="ClickAdd"
                android:text="+"
                android:textSize="40sp" />

        </RelativeLayout>

        <com.ewell.android.sleepcareforphone.common.widgets.SwipeMenuListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backgroundandseperator"
            android:dividerHeight="12dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp" />

    </LinearLayout>

</layout>
