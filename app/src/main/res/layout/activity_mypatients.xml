<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.ewell.android.sleepcareforphone.activities.MyPatientsActivity">


    <RelativeLayout
        android:id="@+id/TitleView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/themeblue">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="170dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/mypatientlist"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/meBtn"
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:background="@drawable/me"
            android:onClick="ClickMe" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_add"
            android:onClick="ClickAddPatient" />

    </RelativeLayout>

    <com.ewell.android.sleepcareforphone.common.widgets.SwipeMenuListView
        android:id="@+id/patientlistView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundandseperator"
        android:dividerHeight="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp" />

    </LinearLayout>
    </layout>